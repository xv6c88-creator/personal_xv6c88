<%- include('partials/header') %>

<div class="bg-dark text-white py-5 mb-5">
    <div class="container text-center">
        <h1><%= t.aboutContent.title %></h1>
    </div>
</div>

<div class="container mb-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2 class="mb-4"><%= t.siteName %></h2>
            <p class="lead"><%= lang === 'en' ? (aboutConfig.about_lead_en || t.aboutContent.lead) : (aboutConfig.about_lead_zh || t.aboutContent.lead) %></p>
            <p><%= lang === 'en' ? (aboutConfig.about_desc_en || t.aboutContent.desc) : (aboutConfig.about_desc_zh || t.aboutContent.desc) %></p>
            <p><strong><%= lang === 'en' ? (aboutConfig.about_mission_en || t.aboutContent.mission) : (aboutConfig.about_mission_zh || t.aboutContent.mission) %></strong></p>
        </div>
        <div class="col-md-6">
            <div class="bg-secondary text-white d-flex align-items-center justify-content-center rounded shadow" style="height: 300px;">
                <h3><%= lang === 'en' ? 'Factory Image' : '工厂实景图' %></h3>
            </div>
        </div>
    </div>
</div>

<div class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-5"><%= lang === 'en' ? 'Our Advantages' : '我们的优势' %></h2>
        <div class="row text-center">
            <div class="col-md-3">
                <i class="fas fa-history fa-3x text-primary mb-3"></i>
                <h5><%= lang === 'en' ? (aboutConfig.about_stats_exp_en || t.aboutContent.stats.exp) : (aboutConfig.about_stats_exp_zh || t.aboutContent.stats.exp) %></h5>
            </div>
            <div class="col-md-3">
                <i class="fas fa-globe fa-3x text-primary mb-3"></i>
                <h5><%= lang === 'en' ? (aboutConfig.about_stats_export_en || t.aboutContent.stats.export) : (aboutConfig.about_stats_export_zh || t.aboutContent.stats.export) %></h5>
            </div>
            <div class="col-md-3">
                <i class="fas fa-award fa-3x text-primary mb-3"></i>
                <h5><%= t.aboutContent.stats.iso %></h5>
            </div>
            <div class="col-md-3">
                <i class="fas fa-users fa-3x text-primary mb-3"></i>
                <h5><%= lang === 'en' ? (aboutConfig.about_stats_team_en || t.aboutContent.stats.team) : (aboutConfig.about_stats_team_zh || t.aboutContent.stats.team) %></h5>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
