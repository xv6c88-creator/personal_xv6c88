<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group">
                <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                    <i class="fas fa-tachometer-alt me-2"></i>仪表盘
                </a>
                <a href="/admin/categories" class="list-group-item list-group-item-action">
                    <i class="fas fa-tags me-2"></i>分类管理
                </a>
                <a href="/admin/contact" class="list-group-item list-group-item-action active">
                    <i class="fas fa-address-card me-2"></i>联系方式
                </a>
                <a href="/admin/about" class="list-group-item list-group-item-action">
                    <i class="fas fa-info-circle me-2"></i>关于我们
                </a>
                <a href="/admin/plugins" class="list-group-item list-group-item-action">
                    <i class="fas fa-plug me-2"></i>系统插件
                </a>
                <a href="/" target="_blank" class="list-group-item list-group-item-action">
                    <i class="fas fa-external-link-alt me-2"></i>浏览前台
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">联系方式管理</h4>
                </div>
                <div class="card-body">
                    <form action="/admin/contact" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3 text-secondary">中文信息</h5>
                                <div class="mb-3">
                                    <label class="form-label">地址 (中文)</label>
                                    <input type="text" name="address_zh" class="form-control" value="<%= config.address_zh || '' %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">工作时间 (中文)</label>
                                    <input type="text" name="work_hours_zh" class="form-control" value="<%= config.work_hours_zh || '' %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3 text-secondary">English Info</h5>
                                <div class="mb-3">
                                    <label class="form-label">Address (English)</label>
                                    <input type="text" name="address_en" class="form-control" value="<%= config.address_en || '' %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Work Hours (English)</label>
                                    <input type="text" name="work_hours_en" class="form-control" value="<%= config.work_hours_en || '' %>" required>
                                </div>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">联系电话</label>
                                    <input type="text" name="phone" class="form-control" value="<%= config.phone || '' %>" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">电子邮箱</label>
                                    <input type="email" name="email" class="form-control" value="<%= config.email || '' %>" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">WhatsApp</label>
                                    <input type="text" name="whatsapp" class="form-control" value="<%= config.whatsapp || '' %>" placeholder="+86XXXXXXXXXXX">
                                </div>
                            </div>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">保存更改</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
