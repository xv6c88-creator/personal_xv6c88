<%- include('../partials/header') %>

<div class="container py-5">
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group">
                <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                    <i class="fas fa-tachometer-alt me-2"></i>仪表盘
                </a>
                <a href="/admin/categories" class="list-group-item list-group-item-action">
                    <i class="fas fa-tags me-2"></i>分类管理
                </a>
                <a href="/admin/contact" class="list-group-item list-group-item-action">
                    <i class="fas fa-address-card me-2"></i>联系方式
                </a>
                <a href="/admin/carousel" class="list-group-item list-group-item-action">
                    <i class="fas fa-images me-2"></i>首页轮播
                </a>
                <a href="/admin/chat" class="list-group-item list-group-item-action">
                    <i class="fas fa-comments me-2"></i>在线咨询
                </a>
                <a href="/admin/about" class="list-group-item list-group-item-action active">
                    <i class="fas fa-info-circle me-2"></i>关于我们
                </a>
                <a href="/admin/plugins" class="list-group-item list-group-item-action">
                    <i class="fas fa-plug me-2"></i>系统插件
                </a>
                <a href="/admin/account" class="list-group-item list-group-item-action">
                    <i class="fas fa-user-cog me-2"></i>账户设置
                </a>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">关于我们管理</h4>
                </div>
                <div class="card-body">
                    <form action="/admin/about" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <h5 class="mb-3 text-secondary">中文信息</h5>
                                <div class="mb-3">
                                    <label class="form-label">导语</label>
                                    <textarea name="about_lead_zh" class="form-control" rows="3"><%= (config.about_lead_zh || '') %></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">介绍</label>
                                    <textarea name="about_desc_zh" class="form-control" rows="4"><%= (config.about_desc_zh || '') %></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">使命</label>
                                    <input type="text" name="about_mission_zh" class="form-control" value="<%= (config.about_mission_zh || '') %>">
                                </div>
                                <h6 class="mt-3">优势数据</h6>
                                <div class="mb-2">
                                    <label class="form-label">经验</label>
                                    <input type="text" name="about_stats_exp_zh" class="form-control" value="<%= (config.about_stats_exp_zh || '') %>">
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">出口国家</label>
                                    <input type="text" name="about_stats_export_zh" class="form-control" value="<%= (config.about_stats_export_zh || '') %>">
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">团队规模</label>
                                    <input type="text" name="about_stats_team_zh" class="form-control" value="<%= (config.about_stats_team_zh || '') %>">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h5 class="mb-3 text-secondary">英文信息</h5>
                                <div class="mb-3">
                                    <label class="form-label">Lead</label>
                                    <textarea name="about_lead_en" class="form-control" rows="3"><%= (config.about_lead_en || '') %></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <textarea name="about_desc_en" class="form-control" rows="4"><%= (config.about_desc_en || '') %></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Mission</label>
                                    <input type="text" name="about_mission_en" class="form-control" value="<%= (config.about_mission_en || '') %>">
                                </div>
                                <h6 class="mt-3">Advantages</h6>
                                <div class="mb-2">
                                    <label class="form-label">Experience</label>
                                    <input type="text" name="about_stats_exp_en" class="form-control" value="<%= (config.about_stats_exp_en || '') %>">
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Export Countries</label>
                                    <input type="text" name="about_stats_export_en" class="form-control" value="<%= (config.about_stats_export_en || '') %>">
                                </div>
                                <div class="mb-2">
                                    <label class="form-label">Team Size</label>
                                    <input type="text" name="about_stats_team_en" class="form-control" value="<%= (config.about_stats_team_en || '') %>">
                                </div>
                            </div>
                        </div>
                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">保存更改</button>
                            <a href="/admin/dashboard" class="btn btn-secondary">取消</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
