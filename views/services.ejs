<%- include('partials/header') %>

<div class="bg-dark text-white py-5 mb-5">
    <div class="container text-center">
        <h1><%= t.services %></h1>
    </div>
</div>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="prose">
                        <%- lang === 'en' ? (servicesConfig.services_content_en || 'Please contact us for service and support.') : (servicesConfig.services_content_zh || '如需服务与支持，请联系我们。') %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mb-5">
    <h3 class="mb-3"><%= t.resourcesTitle %></h3>
    <div class="row">
        <% if (typeof resources !== 'undefined' && resources.length > 0) { %>
            <% resources.forEach(function(r) { %>
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= lang === 'en' ? (r.title_en || r.title_zh || '') : (r.title_zh || r.title_en || '') %></h5>
                            <p class="card-text text-muted"><%= lang === 'en' ? (r.description_en || '') : (r.description_zh || '') %></p>
                            <% if (r.type === 'manual' && r.file_path) { %>
                                <a href="<%= r.file_path %>" target="_blank" class="btn btn-outline-primary"><%= t.downloadManual %></a>
                            <% } else if (r.type === 'video' && r.video_path) { %>
                                <video src="<%= r.video_path %>" class="w-100" controls></video>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info"><%= t.resourcesEmpty %></div>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
