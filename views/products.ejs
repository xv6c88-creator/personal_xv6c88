<%- include('partials/header') %>

<div class="bg-secondary text-white py-4 mb-4">
    <div class="container">
        <h1 class="mb-0"><%= t.products %></h1>
    </div>
</div>

<div class="container mb-5">
    <div class="row">
        <!-- Sidebar Filter (Mockup) -->
        <div class="col-md-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <%= t.productCategory %>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a class="text-decoration-none <%= !selectedCategory ? 'fw-bold' : '' %>" href="/products"><%= t.all %></a>
                        <span class="badge bg-secondary rounded-pill"><%= products.length %></span>
                    </li>
                    <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                        <% categories.forEach(function(cat) { 
                            const label = lang === 'en' ? cat.name_en : cat.name;
                            const queryVal = label;
                            const active = selectedCategory === queryVal;
                            const isMotor = (label && (label.indexOf('电机') !== -1 || label.toLowerCase().indexOf('motor') !== -1));
                        %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <a class="text-decoration-none <%= active ? 'fw-bold' : '' %> <%= isMotor ? 'text-danger fw-bold fs-5' : '' %>" href="/products?category=<%= encodeURIComponent(queryVal) %>"><%= label %></a>
                                <span class="badge bg-primary rounded-pill"><%= cat.count %></span>
                            </li>
                        <% }); %>
                    <% } else { %>
                        <li class="list-group-item text-muted"><%= t.noCategories %></li>
                    <% } %>
                </ul>
            </div>
        </div>

        <!-- Product Grid -->
        <div class="col-md-9">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <h4 class="mb-0">
                    <%= selectedCategory ? (t.currentCategory + selectedCategory) : t.allProducts %>
                </h4>
            </div>
            <div class="row">
                <% if (products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="bg-light d-flex align-items-center justify-content-center" style="height: 250px; overflow: hidden;">
                                    <% if(product.image) { %>
                                        <img src="<%= product.image %>" class="card-img-top" alt="<%= l(product, 'name') %>" style="max-height: 100%; width: auto;">
                                    <% } else { %>
                                        <i class="fas fa-image fa-4x text-muted"></i>
                                    <% } %>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0"><%= l(product, 'name') %></h5>
                                        <span class="badge bg-info text-dark"><%= l(product, 'category') %></span>
                                    </div>
                                    <% var _d = l(product, 'description') || ''; var _p = _d.replace(/<[^>]*>/g, ''); %>
                                    <p class="card-text text-muted"><%= _p.length > 100 ? (_p.substring(0, 100) + '...') : _p %></p>
                                    <a href="/products/<%= product.id %>" class="btn btn-primary w-100"><%= t.viewDetails %></a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12">
                        <div class="alert alert-info"><%= t.noData %></div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
